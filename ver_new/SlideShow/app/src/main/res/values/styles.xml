<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.ToolbarDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorGrey</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.WhiteStatus" parent="AppTheme">
        <item name="colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/photo_toolbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/photo_toolbar_title_text_color</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/photo_toolbar_subtitle_text_size</item>
        <item name="android:textColor">@color/photo_toolbar_subtitle_text_color</item>
    </style>

    <style name="AppTheme.ToolbarLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>
